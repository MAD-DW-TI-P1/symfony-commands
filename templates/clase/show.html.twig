{% extends 'base.html.twig' %}

{% block title %}Clase{% endblock %}

{% block body %}
    <h1>Clase</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ clase.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ clase.name }}</td>
            </tr>
            <tr>
                <th>Alert</th>
                <td>{{ clase.alert ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ clase.created ? clase.created|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ clase.start ? clase.start|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_clase_index') }}">back to list</a>

    <a href="{{ path('app_clase_edit', {'id': clase.id}) }}">edit</a>

    {{ include('clase/_delete_form.html.twig') }}
{% endblock %}
